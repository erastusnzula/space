<GameMenuWidget>:
    screen_title_object: screen_title_object
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size : self.size

    Label:
        id : screen_title_object
        text : root.parent.screen_title
        pos_hint: {'center_x': .5, 'center_y' : .8}
        font_name : 'assets/fonts/Sackers-Gothic-Std-Light.ttf'
        font_size: dp(60)



<WelcomeWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size : self.size
    Label:
        id : screen_title_object
        text : 'S   P   A   C   E'
        pos_hint: {'center_x': .5, 'center_y' : .8}
        font_name : 'assets/fonts/Sackers-Gothic-Std-Light.ttf'
        font_size: dp(60)

